name: Code Validation

on:
  pull_request:
    branches: [ main ]
  push:
    branches: [ main ]

concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: true

env:
  DATABASE_URL: "postgresql://dummy:dummy@localhost:5432/dummy"

jobs:
  lint:
    name: ESLint
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '24'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      # uncomment this step when all errors in /src are resolved
      #      - name: Run ESLint
      #        run: npx eslint ./src

      # remove this step when all errors in /src are resolved
      - name: Run ESLint on changed files (temporary)
        shell: bash
        run: |
          if [ "${{ github.event_name }}" = "pull_request" ]; then
            BASE_SHA="${{ github.event.pull_request.base.sha }}"
            HEAD_SHA="${{ github.sha }}"
          else
            BASE_SHA="HEAD~1"
            HEAD_SHA="HEAD"
          fi
          CHANGED_FILES=$(git diff --name-only --diff-filter=ACMRT ${BASE_SHA}..${HEAD_SHA} | grep -E '^src/.*\.(ts|tsx|js|jsx|mdx)$' || true)
          if [ -n "$CHANGED_FILES" ]; then
            echo "Linting changed files:"
            echo "$CHANGED_FILES"
            npx eslint ${CHANGED_FILES} --report-unused-disable-directives --no-error-on-unmatched-pattern --format stylish
          else
            echo "No TypeScript/JavaScript files changed in src/"
          fi

  typecheck:
    name: Type Check
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '24'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Generate Prisma Client
        run: npx prisma generate

      - name: Generate Next.js-specific types
        run: npx next typegen

      - name: Type check
        run: |
          echo '{
            "extends": "./tsconfig.json",
            "include": ["src", "next-env.d.ts"]
          }' > tsconfig.ci.json
          npx tsc --project tsconfig.ci.json --noEmit
          rm tsconfig.ci.json

  format:
    name: Prettier Format Check
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '24'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

        #      uncomment this step when all errors in /src are resolved
        #      - name: Check formatting
        #        run: npm run format:check

        # remove this step when all errors in /src are resolved
      - name: Check formatting on changed files
        run: |
          if [ "${{ github.event_name }}" = "pull_request" ]; then
            BASE_SHA="${{ github.event.pull_request.base.sha }}"
            HEAD_SHA="${{ github.sha }}"
          else
            BASE_SHA="HEAD~1"
            HEAD_SHA="HEAD"
          fi
          CHANGED_FILES=$(git diff --name-only --diff-filter=ACMRT ${BASE_SHA}..${HEAD_SHA} | grep -E '^src/.*\.(ts|tsx|js|jsx|mdx)$' || true)
          if [ -n "$CHANGED_FILES" ]; then
            echo "Linting changed files:"
            echo "$CHANGED_FILES"
            npx prettier --check $CHANGED_FILES
          else
            echo "No TypeScript/JavaScript files changed in src/"
          fi

  prisma-validate:
    name: Validate Prisma Schema
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '24'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Validate Prisma Schema
        run: npx prisma validate

      - name: Check Prisma formatting
        run: npx prisma format --check

  validation-complete:
    name: All Validations Passed
    runs-on: ubuntu-latest
    needs: [ lint, typecheck, format, prisma-validate ]
    if: always()

    steps:
      - name: Check validation results
        run: |
          echo "Security Scan Summary:"
          echo "  - ESLint (required): ${{ needs.lint.result }}"
          echo "  - Type Check (required): ${{ needs.typecheck.result }}"
          echo "  - Prettier Format Check (required): ${{ needs.format.result }}"
          echo "  - Validate Prisma Schema (required): ${{ needs.prisma-validate.result }}"
          
          if [ "${{ needs.lint.result }}" != "success" ] || \
             [ "${{ needs.typecheck.result }}" != "success" ] || \
             [ "${{ needs.format.result }}" != "success" ] || \
             [ "${{ needs.prisma-validate.result }}" != "success" ]; then
            echo "One or more validation checks failed"
            exit 1
          fi
          echo "All validation checks passed!"
