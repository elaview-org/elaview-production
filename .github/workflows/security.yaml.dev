name: Security Scanning

on:
  pull_request:
    branches: [ main ]
  push:
    branches: [ main ]
  schedule:
    # Run security scans weekly on Monday at 9 AM UTC
    - cron: '0 9 * * 1'

concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: true

jobs:
  dependency-audit:
    name: npm Audit & Dependency Check
    runs-on: ubuntu-latest
    continue-on-error: true

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '24'
          cache: 'npm'

      - name: Cache node modules
        uses: actions/cache@v4
        with:
          path: |
            ~/.npm
            node_modules
          key: ${{ runner.os }}-security-${{ hashFiles('package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-security-

      - name: Install dependencies
        run: npm ci

      - name: Run npm audit
        run: npm audit --audit-level=high

      - name: Check for outdated dependencies
        run: npm outdated || true

      - name: Generate audit report
        run: |
          echo "# Security Audit Report" > audit-report.md
          echo "" >> audit-report.md
          echo "## npm Audit Results" >> audit-report.md
          npm audit --json > npm-audit.json || true
          echo "Audit completed. Check npm-audit.json for details."

  #      - name: Upload audit report
  #        uses: actions/upload-artifact@v4
  #        if: always()
  #        with:
  #          name: security-audit-report
  #          path: |
  #            audit-report.md
  #            npm-audit.json
  #          retention-days: 30

  secret-scanning:
    name: Secret Detection
    runs-on: ubuntu-latest
    continue-on-error: false

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: TruffleHog OSS
        uses: trufflesecurity/trufflehog@main
        with:
          path: ./
          base: ${{ github.event.repository.default_branch }}
          head: HEAD
          extra_args: --debug --only-verified

  license-check:
    name: License Compliance
    runs-on: ubuntu-latest
    continue-on-error: true

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '24'
          cache: 'npm'

      - name: Cache node modules
        uses: actions/cache@v4
        with:
          path: |
            ~/.npm
            node_modules
          key: ${{ runner.os }}-license-${{ hashFiles('package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-license-

      - name: Install dependencies
        run: npm ci

      - name: License checker
        run: |
          npx license-checker --summary
          npx license-checker --production --onlyAllow "MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;0BSD;CC0-1.0;Unlicense;Python-2.0" || echo "⚠️ Found packages with non-approved licenses"

      - name: Generate license report
        run: npx license-checker --json > licenses.json

  #      - name: Upload license report
  #        uses: actions/upload-artifact@v4
  #        with:
  #          name: license-report
  #          path: licenses.json
  #          retention-days: 30

  security-complete:
    name: All Security Scans Complete
    runs-on: ubuntu-latest
    needs: [ dependency-audit, secret-scanning, license-check ]
    if: always()

    steps:
      - name: Check security scan results
        run: |
          echo "Security Scan Summary:"
          echo "  - Secret Scanning (required): ${{ needs.secret-scanning.result }}"
          echo "  - Dependency Audit (optional): ${{ needs.dependency-audit.result }}"
          echo "  - License Check (optional): ${{ needs.license-check.result }}"
          
          if [ "${{ needs.secret-scanning.result }}" != "success" ]; then
            echo "Secret scanning detected issues - BLOCKING"
            exit 1
          fi

          if [ "${{ needs.dependency-audit.result }}" == "failure" ] || \
             [ "${{ needs.license-check.result }}" == "failure" ]; then
            echo "Some security checks failed - Review required"
          else
            echo "All security scans passed!"
          fi