# Elaview Mobile App - Environment Variables
# Copy this file to .env and fill in the actual values

# ============================================================================
# API & BACKEND
# ============================================================================

# GraphQL API endpoint
# Local: http://localhost:5000/graphql
# Staging: https://staging-api.elaview.com/graphql
# Production: https://api.elaview.com/graphql
EXPO_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:5000/graphql


# ============================================================================
# AUTHENTICATION (Clerk)
# ============================================================================

# Clerk publishable key (get from https://dashboard.clerk.com)
# Format: pk_test_xxx (test) or pk_live_xxx (production)
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key


# ============================================================================
# PAYMENTS (Stripe)
# ============================================================================

# Stripe publishable key (get from https://dashboard.stripe.com)
# Format: pk_test_xxx (test mode) or pk_live_xxx (live mode)
# IMPORTANT: Use test keys for development!
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key


# ============================================================================
# MAPS & LOCATION (Google Maps)
# ============================================================================

# Google Maps API Key (enable Maps SDK for iOS/Android)
# Get from: https://console.cloud.google.com/google/maps-apis
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Google Maps Map ID (for custom styling)
# Create in: https://console.cloud.google.com/google/maps-apis/studio/maps
EXPO_PUBLIC_GOOGLE_MAPS_MAP_ID=your-google-maps-map-id


# ============================================================================
# FILE STORAGE (Cloudinary)
# ============================================================================

# Cloudinary cloud name
# Get from: https://console.cloudinary.com/console
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name

# Cloudinary upload presets (create in Cloudinary dashboard)
EXPO_PUBLIC_CLOUDINARY_UPLOAD_PRESET_CAMPAIGNS=elaview-campaigns
EXPO_PUBLIC_CLOUDINARY_UPLOAD_PRESET_SPACES=elaview-spaces
EXPO_PUBLIC_CLOUDINARY_UPLOAD_PRESET_VERIFICATION=elaview-verification


# ============================================================================
# APP CONFIGURATION
# ============================================================================

# App URL (for deep linking and redirects)
# Local: exp://localhost:8081
# Production: elaview://
EXPO_PUBLIC_APP_URL=exp://localhost:8081

# API URL (for web links and redirects)
EXPO_PUBLIC_API_URL=http://localhost:3000


# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable experimental features (true/false)
EXPO_PUBLIC_ENABLE_NEW_BOOKING_FLOW=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false


# ============================================================================
# ENVIRONMENT
# ============================================================================

# Environment identifier: development, staging, production
EXPO_PUBLIC_ENV=development

# Enable debug mode (shows additional logs and debug UI)
EXPO_PUBLIC_DEBUG=true


# ============================================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# ============================================================================

# Sentry DSN (error tracking)
# Get from: https://sentry.io/settings/projects/
# EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Analytics tracking ID (e.g., Google Analytics, Amplitude)
# EXPO_PUBLIC_ANALYTICS_ID=your-analytics-id

# Expo Push Notification token (for testing)
# Leave blank in development - obtained at runtime
# EXPO_PUBLIC_PUSH_TOKEN=ExponentPushToken[xxxxxxxxxxxxxxxxxxxxxx]


# ============================================================================
# NOTES
# ============================================================================

# 1. All variables prefixed with EXPO_PUBLIC_ are exposed to the client
#    Never put secrets in EXPO_PUBLIC_ variables!
#
# 2. Variables without EXPO_PUBLIC_ prefix are only available during build
#
# 3. After changing this file:
#    - Restart the development server: npx expo start --clear
#    - For native changes, rebuild: eas build --profile development
#
# 4. For production builds, set these in EAS Secrets:
#    eas secret:create --scope project --name EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY --value pk_live_xxx
#
# 5. Get team credentials from:
#    - Stripe: Ask @quang-cap for test/live keys
#    - Clerk: Check team dashboard or ask @mike-anderson
#    - Google Maps: Check Google Cloud Console (team project)
#
# 6. See START_HERE.md for detailed setup instructions
